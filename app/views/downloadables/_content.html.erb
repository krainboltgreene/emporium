  </div>
  <div class="tab-pane fade" id="description">
    <%= raw downloadable.description %>
  </div>
  <div class="tab-pane fade" id="installing">
    <%= raw downloadable.install %>
  </div>
  <div class="tab-pane fade" id="changelog">
    <%= raw downloadable.changelog %>
  </div>
  <div class="tab-pane fade" id="license">
    <%= raw downloadable.license %>
  </div>
  <div class="tab-pane fade" id="comments">
    <%= render partial: "disqus" %>
  </div>
</div>

